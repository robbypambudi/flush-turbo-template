{
  "name": "flush-turbo-template",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier . --ignore-path .gitignore --check",
    "format:fix": "prettier . --ignore-path .gitignore --write",
    "prepare": "husky",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@flush/eslint-config": "workspace:*",
    "@flush/typescript-config": "workspace:*",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
